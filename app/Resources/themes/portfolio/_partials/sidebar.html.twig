    <div class="px-4 py-6 mb-6 bg-gray-50 rounded-md shadow-lg">
        <h3 class="text-2xl my-2">About</h3>

        <p class="text-justify px-4 py-2">{{ site_description() }}</p>
        <p class="text-right px-4 py-2"><a href="/_p/about" title="About this project">More Info <span class="fas fa-arrow-right"></span></a> </p>

    </div>

    <div class="px-4 py-6 mb-6 bg-gray-50 mt-10 rounded-md shadow-lg">
        <h3 class="text-2xl mb-6">Creators by Topic</h3>
            <ul class="divide-y divide-gray-200 px-2">
                {% for tag_name, posts in tag_list() %}
                    <li class="py-2 px-2 hover:bg-gray-200"><a href="/tag/{{ tag_name }}">{{ tag_name }}</a></li>
                {% endfor %}
            </ul>
    </div>

    <div class="px-4 py-6 mb-6 bg-gray-50 mt-10 rounded-md shadow-lg">
        <h3 class="text-2xl mb-6">Links</h3>
            <ul class="menu-list">
                {% for title,link in social_links() %}
                    {%  if link %}<li><a href="{{ link }}" title="{{ title }}"><span class="icon"><i class="fab fa-{{ title|lower }}"></i></span> {{ title }}</a></li>{% endif %}
                {% endfor %}
            </ul>
    </div>

